#!/bin/sh

if git show -s --format=%B | grep -q "\[release\]"; then
  echo "PRODUCTION_RUN=1" >> $GITHUB_ENV
  echo "✓ - Production Run"
  echo "# CutBox Production Release $(bin/dev_version) (build: $(bc <<<"$(bin/build_number) + 1"))" >> $GITHUB_STEP_SUMMARY
else
  echo "✗ - Prerelease Run"
  echo "# CutBox PreRelease $(bin/dev_version) (build: $(bc <<<"$(bin/build_number) + 1"))" >> $GITHUB_STEP_SUMMARY
fi
